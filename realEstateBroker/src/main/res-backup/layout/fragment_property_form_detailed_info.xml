<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/content_padding"
    android:paddingLeft="@dimen/content_padding"
    android:paddingTop="@dimen/content_padding" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/content_padding"
        android:shrinkColumns="1" >

        <TableRow>

            <TextView
                style="@style/itemViewText"
                android:layout_gravity="center_vertical"
                android:paddingTop="0dp"
                android:text="@string/num_bedrooms" />

            <EditText
                android:id="@+id/txtBedrooms"
                android:ems="10"
                android:inputType="number" >

                <requestFocus />
            </EditText>
        </TableRow>

        <TableRow>

            <TextView
                style="@style/itemViewText"
                android:layout_gravity="center_vertical"
                android:paddingTop="0dp"
                android:text="@string/num_bathrooms" />

            <EditText
                android:id="@+id/txtBathrooms"
                android:ems="10"
                android:inputType="number" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/itemViewText"
                android:layout_gravity="center_vertical"
                android:paddingTop="0dp"
                android:text="@string/num_balconies" />

            <EditText
                android:id="@+id/txtBalconies"
                android:ems="10"
                android:inputType="number" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/itemViewText"
                android:layout_gravity="center_vertical"
                android:paddingTop="0dp"
                android:text="@string/num_garages" />

            <EditText
                android:id="@+id/txtGarages"
                android:ems="10"
                android:inputType="number" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/itemViewText"
                android:layout_gravity="center_vertical"
                android:paddingTop="0dp"
                android:text="@string/num_parking_lots" />

            <EditText
                android:id="@+id/txtNumParkingLots"
                android:ems="10"
                android:inputType="number" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/itemViewText"
                android:layout_gravity="center_vertical"
                android:paddingTop="0dp"
                android:text="@string/floor_number" />

            <EditText
                android:id="@+id/txtFloorNumber"
                android:ems="10"
                android:inputType="number" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/itemViewText"
                android:layout_gravity="center_vertical"
                android:paddingTop="0dp"
                android:text="@string/total_floor" />

            <EditText
                android:id="@+id/txtTotalFloor"
                android:ems="10"
                android:inputType="number" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/itemViewText"
                android:layout_gravity="center_vertical"
                android:paddingTop="0dp"
                android:text="@string/construction_year" />

            <EditText
                android:id="@+id/txtConstructionYear"
                android:ems="10"
                android:inputType="number" />
        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/txtArea"
                android:ems="10"
                android:hint="@string/area"
                android:inputType="numberDecimal" />

            <Spinner android:id="@+id/spnAreaUnit" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/itemViewText"
                android:layout_gravity="center_vertical"
                android:paddingTop="0dp"
                android:text="@string/furnishing" />

            <Spinner
                android:id="@+id/spnFurnishing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/itemViewText"
                android:layout_gravity="center_vertical"
                android:paddingTop="0dp"
                android:text="@string/facing_orientation" />

            <Spinner
                android:id="@+id/spnFacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>

</ScrollView>